#cmakedefine FLECSI_ENABLE_METIS
#cmakedefine FLECSI_ENABLE_PARMETIS

//----------------------------------------------------------------------------//
// Enable Graphviz
//----------------------------------------------------------------------------//

#cmakedefine FLECSI_ENABLE_GRAPHVIZ

//----------------------------------------------------------------------------//
// Enable Kokkos
//----------------------------------------------------------------------------//

#cmakedefine FLECSI_ENABLE_KOKKOS

//----------------------------------------------------------------------------//
// Enable HDF5
//----------------------------------------------------------------------------//

#cmakedefine FLECSI_ENABLE_HDF5

//----------------------------------------------------------------------------//
// Enable OpenSSL
//----------------------------------------------------------------------------//

#cmakedefine FLECSI_ENABLE_OPENSSL


